{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "codebase": "default",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/mt-bachelor",
        "function": "getMtBachelorConditions"
      },
      {
        "source": "/api/roads",
        "function": "getRoadConditions"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
